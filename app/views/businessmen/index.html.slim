- model_class = Businessman
div class="page-header"
  h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
table class="table table-striped"
  thead
    tr
      th= model_class.human_attribute_name(:id)
      th= model_class.human_attribute_name(:login)
      th= model_class.human_attribute_name(:first_name)
      th= model_class.human_attribute_name(:last_name)
      th= model_class.human_attribute_name(:skype)
      th= model_class.human_attribute_name(:created_at)
      th=t '.actions', :default => t("helpers.actions")
  tbody
    - @businessmen.each do |businessman|
      tr
        td= link_to businessman.id, businessman_path(businessman)
        td= businessman.login
        td= businessman.first_name
        td= businessman.last_name
        td= businessman.skype
        td=l businessman.created_at
        td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_businessman_path(businessman), :class => 'btn btn-default btn-xs'
          '
          = link_to t('.destroy', :default => t("helpers.links.destroy")), businessman_path(businessman), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_businessman_path, :class => 'btn btn-primary'

